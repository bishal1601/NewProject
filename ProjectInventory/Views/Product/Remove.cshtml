@model ProductDeleteVm

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<<div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="card shadow-lg border-primary rounded-5 p-4" style="max-width: 500px; width: 100%; height: 100%; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
        <div class="card-header bg-primary text-white rounded-top-5 text-center" style="font-size: 1.5rem; font-weight: 600; letter-spacing: 0.5px;">
            Delete Confirmation
        </div>
        <div class="card-body d-flex flex-column justify-content-between" style="font-size: 1rem; line-height: 1.6; color: #333;">
            <div>
                <h5 class="card-title text-center" style="font-size: 1.4rem; font-weight: 500; color: #0d6efd;">
                    @Model.Name (@Model.Code)
                </h5>
                <hr />
                <p class="card-text"><strong>Description:</strong> <span style="font-style: italic; color: #555;">@Model.Description</span></p>
                <p class="card-text"><strong>Cost Price:</strong> <span style="color: #198754;"><b>Rs. </b>@Model.CostPrice</span></p>
                <p class="card-text"><strong>Status:</strong> <span style="font-weight: 600; color: @(Model.IsActive ? "#0d6efd" : "#dc3545")">
                    @(Model.IsActive ? "Active" : "Inactive")
                </span></p>
            </div>

            <form asp-action="RemoveConfirmed" asp-route-id="@Model.Id" method="post" class="d-flex gap-2 mt-3">
                <input type="hidden" asp-for="Id"/>
                @Html.AntiForgeryToken()
                <button type="submit" asp-action="RemoveConfirmed" class="btn btn-primary flex-grow-1" style="font-weight: 600;">Delete</button>
                <a asp-action="Index" class="btn btn-secondary flex-grow-1" style="font-weight: 600;">Cancel</a>
            </form>
        </div>
    </div>
</div>



